{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/LoginStyle.css') }}">
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

    {{ form_row(registrationForm.voornaam) }}
    {{ form_row(registrationForm.achternaam) }}
    <i class="float-end" style="color: lightgray; float: right;"> * Alias is optioneel </i>
    {{ form_row(registrationForm.alias) }}
    {{ form_row(registrationForm.gender) }}
    {{ form_row(registrationForm.nationaliteit) }}

    {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-dark float-right">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
